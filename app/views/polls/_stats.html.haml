#polls_per_month
  :javascript
    (function($) {
      $(function() {
        var selector = "#polls_per_month";
        var data = #{@poll.serialize_for_graph};

        Graph.bar(selector,data);
      });
    })(jQuery);

-content_for :footer do
  :javascript
    google.setOnLoadCallback(function() {
      Graph.instances.forEach(function(instance) {
        instance.render();
      });
    });
